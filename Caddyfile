localhost:443 {
  root * /app/public
  encode zstd gzip

  handle /__/auth/* {
    reverse_proxy https://dreem-me-staging.firebaseapp.com {
      header_up Host "dreem-me-staging.firebaseapp.com"
    }
  }

  handle {
    try_files {path} /index.html
    file_server
  }

  header / {
    Cache-Control "no-cache, no-store, must-revalidate"
  }
}
